{
  "name": "employee-onboarding-portal",
  "version": "1.0.0",
  "description": "Full-stack employee onboarding application",
  "scripts": {
    "start": "cd backend && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "postinstall": "cd backend && pip install -r requirements.txt"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.76.1",
    "react-router-dom": "^6.30.0",
    "zod": "^3.25.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}